<%- include('partials/header') -%>
<div class="container">
  <div class="row mt-5">
      <div class="col-6">
        <h2>Your Tasks</h2>
        <ul class="col list-unstyled">
          <% for(var i=0; i<posts.length; i++) {%>
            <% if(!posts[i].completed){%>
              <li class="col justify-content-between my-2 task-item">
                <a href="/post/<%= posts[i]._id%>">
                  <h3><%= posts[i].title %></h3>
                  <p><%= posts[i].caption%></p>
                  <img class="img-fluid task-img" src="<%= posts[i].image%>">
                </a>
              </li>
            <% } %>
          <% } %>
        </ul>
          
      </div>  
    <div class="col-5">
      
      <div class="">
        <h2>Create a Task</h2>
        <form action="/post/createPost" enctype="multipart/form-data" method="POST">
          <div class="mb-3">
              <label for="title" class="form-label">Title</label>
              <input type="text" class="form-control" id="title" name="title">
          </div>
          <div class="mb-3">
            <label for="caption" class="form-label">Description</label>
            <textarea class="form-control" id="caption" name="caption"></textarea>
          </div>
          <div class="mb-3">
            <label for="imgUpload" class="form-label">Image</label>
            <input type="file" class="form-control" id="imageUpload" name="file">
          </div>
          <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
          <button type="submit" class="btn btn-primary" value="Upload" formaction="/post/createPostWithImage">Submit with image</button>
        </form>
      </div>
      <div class="row justify-content-center mt-3">
        <a class="btn btn-primary" href="/feed">Return to Task List</a>
      </div>
      <div class="my-3">
        <p><strong>User Name</strong>: <%= user.userName %></p>
        <p><strong>Email</strong>: <%= user.email %></p>
        <a href="/logout" class="col-3 btn btn-primary">Logout</a>
      </div>
    </div>
    
  </div>
</div>
<%- include('partials/footer') -%>