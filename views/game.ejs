        <h1><%= gameInfo.name %></h1>
        <h3><%= gameInfo.publishers[0].name %></h3>
        <br>
        <div class="row">
            <img class= "col-md-9 img-responsive" src="<%= gameInfo.background_image %>" alt="game image">
            <div class = "col-md-3"><%- gameInfo.description %></div>
            <br>
        </div>
        <br>
        <div class="row-gy5">
            <form action="/addGame/<%= gameInfo.id %>" enctype="form-data" method="POST">
                <button type="submit" class="col-md-2 btn-primary">I have this!</button>
            </form>
            <button class="col-md-2 col-md-offset-4 btn-primary">I want this!</button>
        </div>
        
    </div>
    
<%- include('partials/footer') -%>