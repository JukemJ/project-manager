<%- include('partials/header') -%>
  <div class="container">
    <div class="row">
      <div class="col">
        <h2>TO DO</h2>
        <ul class="col list-unstyled">
          <% for(var i=0; i<posts.length; i++) {%>
            <%if(!posts[i].assigned.length && !posts[i].completed){%>
              <li class="col-6 justify-content-between mt-5">
                <a href="/post/<%= posts[i]._id%>">
                  <h3><%= posts[i].title %></h3>
                  <p><%= posts[i].caption%></p>
                  <img class="img-fluid" src="<%= posts[i].image%>">
                </a>
              </li>
          <% }} %>
          </ul>
        </div>

      <div class="col">
        <h2>IN PROGRESS</h2>
        <ul class="col list-unstyled">
          <% for(var i=0; i<posts.length; i++) {%>
            <%if(!posts[i].completed && posts[i].assigned.length){%>
              <li class="col-6 justify-content-between mt-5">
                <a href="/post/<%= posts[i]._id%>">
                  <h3><%= posts[i].title %></h3>
                  <p><%= posts[i].caption%></p>
                  <img class="img-fluid" src="<%= posts[i].image%>">
                </a>
              </li>
          <% }} %>
          </ul>
      </div>

      <div class="col">
        <h2>COMPLETED</h2>
        <ul class="col list-unstyled">
          <% for(var i=0; i<posts.length; i++) {%>
            <%if(posts[i].completed){%>
              <li class="col-6 justify-content-between mt-5">
                <a href="/post/<%= posts[i]._id%>">
                  <h3><%= posts[i].title %></h3>
                  <img class="img-fluid" src="<%= posts[i].image%>">
                  <p><%= posts[i].caption%></p>
                </a>
              </li>
          <% }} %>
          </ul>
      </div>

    </div>
  </div>  
<%- include('partials/footer') -%>